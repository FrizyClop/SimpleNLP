<Window x:Class="SimpleNLPApp.DeleteClassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNLPApp"
        mc:Ignorable="d"
        Title="Удаление классов" Height="318" Width="230" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="ListBoxClasses" Margin="0,33,0,55" SelectionMode="Multiple" FontSize="16"/>
        <Label Content="Доступные классы:" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="DeleteButton" Content="Удалить" HorizontalAlignment="Left" Margin="10,252,0,0" VerticalAlignment="Top" FontSize="16" Width="95" Height="24" Click="DeleteButton_Click"/>
        <Button x:Name="CancleButton" Content="Отмена" HorizontalAlignment="Left" Margin="123,252,0,0" VerticalAlignment="Top" FontSize="16" Width="95" Height="24" Click="CancleButton_Click"/>

    </Grid>
</Window>
