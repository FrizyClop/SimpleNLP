<Window x:Class="SimpleNLPApp.ModelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleNLPApp"
        mc:Ignorable="d"
        Title="ModelWindow" Height="450" Width="800" Closed="Window_Closed" ResizeMode="NoResize">
    <Grid>
        <Menu x:Name="UpperMenu">
            <MenuItem x:Name="MenuItemFile" Header="Файл" FontSize="16">
                <MenuItem x:Name="MenuItemNewModel" Header="Новая модель" FontSize="16" Click="MenuItemNewModel_Click"/>
            </MenuItem>
            <MenuItem x:Name="MenuItemText" Header="Тренировка" FontSize="16">
                <MenuItem x:Name="MenuItemAddClass" Header="Добавить класс" FontSize="16" Click="MenuItemAddClass_Click"/>
                <MenuItem x:Name="MenuItemAddText" Header="Добавить текстовый файл" FontSize="16" Click="MenuItemAddText_Click"/>
            </MenuItem>
        </Menu>
        <ListBox x:Name="ListBoxTrainTexts" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,108,0,0" FontSize="18" SelectionMode="Multiple">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Изменить класс" Click="ContextMenuSetClass_Click"></MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
        <Label Content="Классы:" FontSize="16" Margin="10,38,694,341"/>
        <ComboBox x:Name="ComboBoxClasses" Margin="105,38,526,341" FontSize="18" SelectionChanged="ComboBoxClasses_SelectionChanged"/>

    </Grid>
</Window>
